{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "calculator.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/calculate",
      "dest": "calculator.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
